---
import type { TagData } from '../lib/sanity.types';

interface Props {
  tags: TagData[];
  hrefBase?: string;
}

const { tags, hrefBase = '/posts' } = Astro.props;
---

{
  tags.length > 0 && (
    <ul class="tag-list" aria-label="Tags">
      {tags.map((tag) => (
        <li>
          <a href={`${hrefBase}#tag-${tag.slug}`}>{tag.title}</a>
        </li>
      ))}
    </ul>
  )
}
